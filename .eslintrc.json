{
    "plugins": [
        "eslint-plugin-tsdoc",
        "tsdoc-require"
    ],
    "extends": [
        "airbnb",
        "airbnb-typescript",
        "prettier",
        "plugin:prettier/recommended",
        "plugin:storybook/recommended"
    ],
    "rules": {
        "indent": "off",
        "tsdoc/syntax": "error",
        "tsdoc-require/require": "error",
        "react/jsx-props-no-spreading": "off"
    },
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "ignorePatterns": [
        "scripts/**.js",
        "dist/**",
        "stories/**"
    ]
}
